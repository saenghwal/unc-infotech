<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.smartbudget.persistence.mappers.UsersMapper">
    <resultMap id="userResult" type="io.smartbudget.persistence.entity.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="name" column="name"/>
        <result property="createdAt" column="created_at"/>
        <result property="currency" column="currency"/>
    </resultMap>

    <select id="findById" parameterType="java.lang.Integer" resultMap="userResult">
        SELECT * FROM users WHERE id = #{id}
    </select>

    <insert id="add" parameterType="SignUpForm" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (USERNAME, PASSWORD)
        VALUES (#{username}, #{password})
    </insert>

    <select id="findByUsername" resultMap="userResult">
        SELECT * FROM USERS WHERE USERNAME = #{username}
    </select>
</mapper>