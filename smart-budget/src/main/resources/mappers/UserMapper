<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.smartbudget.ejb.persistence.mappers.UserMapper">
    <resultMap id="userResult" type="User">
        <id property="id" column="ID"/>
        <association property="userRoles" javaType="UserRoles" column="id" select="selectUserRolesForUser"/>
        <collection property="bankAccounts" javaType="ArrayList" column="id" ofType="BankAccount" select="selectBankAccountsForUser"/>
    </resultMap>

    <select id="findById" parameterType="java.lang.Integer" resultMap="userResult">
        SELECT * FROM USERS WHERE ID = #{id}
    </select>

    <select id="selectBankAccountsForUser" resultType="BankAccount">
        SELECT * FROM BANK_ACCOUNT WHERE ID = #{id}
    </select>

    <select id="selectUserRolesForUser" resultType="UserRoles">
        SELECT * FROM USER_ROLES WHERE ID = #{id}
    </select>

    <select id="findAll" resultMap="userResult">
        SELECT * FROM USERS
    </select>

    <insert id="add" parameterType="SignUpForm" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO USERS (USERNAME, PASSWORD, USERROLES_ID)
        VALUES (#{username}, #{password}, #{userRoles.id})
    </insert>

    <update id="update" parameterType="User">
        UPDATE USERS SET
        USERNAME = #{username},
        PASSWORD = #{password},
        USERROLES_ID = #{userRoles.id}
        WHERE ID = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Integer">
        DELETE FROM USERS WHERE ID = #{id}
    </delete>

    <select id="findByUsername" resultMap="userResult">
        SELECT * FROM USERS WHERE USERNAME = #{username}
    </select>
</mapper>