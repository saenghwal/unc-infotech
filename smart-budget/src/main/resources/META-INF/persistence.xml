<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="DEVMODE" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>jdbc/budgetapp</jta-data-source>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <mapping-file>src/main/resources/META-INF/AuthTokensEntity.xml</mapping-file>
        <mapping-file>src/main/resources/META-INF/BudgetTypesEntity.xml</mapping-file>
        <mapping-file>src/main/resources/META-INF/BudgetsEntity.xml</mapping-file>
        <mapping-file>src/main/resources/META-INF/CategoriesEntity.xml</mapping-file>
        <mapping-file>src/main/resources/META-INF/RecurringsEntity.xml</mapping-file>
        <mapping-file>src/main/resources/META-INF/TransactionsEntity.xml</mapping-file>
        <mapping-file>src/main/resources/META-INF/UsersEntity.xml</mapping-file>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:postgresql://localhost:5432/budget"/>
            <property name="eclipselink.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="eclipselink.jdbc.user"/>
            <property name="eclipselink.jdbc.password"/>
            <property name="hibernate.connection.url"
                      value="jdbc:postgresql://localhost:5432/budget"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username"/>
            <property name="hibernate.connection.password"/>
            <property name="openjpa.ConnectionURL" value="jdbc:postgresql://localhost:5432/budget"/>
            <property name="openjpa.ConnectionDriverName" value="org.postgresql.Driver"/>
            <property name="openjpa.ConnectionUserName"/>
            <property name="openjpa.ConnectionPassword"/>
            <property name="toplink.jdbc.url" value="jdbc:postgresql://localhost:5432/budget"/>
            <property name="toplink.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="toplink.jdbc.user"/>
            <property name="toplink.jdbc.password"/>
        </properties>
    </persistence-unit>
</persistence>
