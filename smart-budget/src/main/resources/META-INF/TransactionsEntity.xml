<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="entity.TransactionsEntity">
        <table name="transactions" schema="public" catalog="budget"/>
        <attributes>
            <id name="id">
                <column name="id" precision="-1"/>
            </id>
            <basic name="name">
                <column name="name" length="256"/>
            </basic>
            <basic name="amount">
                <column name="amount" precision="2"/>
            </basic>
            <basic name="remark">
                <column name="remark" nullable="false"/>
            </basic>
            <basic name="auto">
                <column name="auto" precision="-1"/>
            </basic>
            <basic name="transactionOn">
                <column name="transaction_on" precision="-1"/>
            </basic>
            <basic name="createdAt">
                <column name="created_at" precision="-1"/>
            </basic>
            <many-to-one name="budgetsByBudgetId" optional="true"
                         target-entity="entity.BudgetsEntity">
                <join-column name="budget_id" referenced-column-name="id"/>
            </many-to-one>
            <many-to-one name="recurringsByRecurringId" optional="true"
                         target-entity="entity.RecurringsEntity">
                <join-column name="recurring_id" nullable="false" referenced-column-name="id"/>
            </many-to-one>
        </attributes>
    </entity>
</entity-mappings>
