<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="entity.UsersEntity">
        <table name="users" schema="public" catalog="budget"/>
        <attributes>
            <id name="id">
                <column name="id" precision="-1"/>
            </id>
            <basic name="username">
                <column name="username" length="256"/>
            </basic>
            <basic name="password">
                <column name="password" length="256"/>
            </basic>
            <basic name="name">
                <column name="name" nullable="false" length="256"/>
            </basic>
            <basic name="createdAt">
                <column name="created_at" precision="-1"/>
            </basic>
            <basic name="currency">
                <column name="currency" nullable="false" length="10"/>
            </basic>
            <one-to-many name="authTokensesById" mapped-by="usersByUserId"
                         target-entity="entity.AuthTokensEntity"/>
            <one-to-many name="budgetsesById" mapped-by="usersByUserId"
                         target-entity="entity.BudgetsEntity"/>
            <one-to-many name="categoriesById" mapped-by="usersByUserId"
                         target-entity="entity.CategoriesEntity"/>
        </attributes>
    </entity>
</entity-mappings>
